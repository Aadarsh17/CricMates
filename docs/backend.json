
{
  "entities": {
    "Team": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Team",
      "type": "object",
      "description": "Represents a cricket team.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the team."
        },
        "name": {
          "type": "string",
          "description": "Name of the team."
        },
        "logoUrl": {
          "type": "string",
          "description": "URL of the team logo."
        },
        "imageHint": {
          "type": "string",
          "description": "AI search hint for the logo."
        },
        "matchesPlayed": {
          "type": "number"
        },
        "matchesWon": {
          "type": "number"
        },
        "matchesLost": {
          "type": "number"
        },
        "matchesDrawn": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Player": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Player",
      "type": "object",
      "description": "Represents a player in a cricket team.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the player."
        },
        "name": {
          "type": "string",
          "description": "Name of the player."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL or Data URI of the player's profile image."
        },
        "role": {
          "type": "string",
          "description": "Role of the player (e.g., Batsman, Bowler, All-rounder)."
        },
        "isRetired": {
          "type": "boolean"
        },
        "teamId": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "role"
      ]
    },
    "LeagueSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "LeagueSettings",
      "type": "object",
      "description": "Stores global league configurations like logo.",
      "properties": {
        "logoUrl": {
          "type": "string",
          "description": "Base64 or URL of the league logo."
        },
        "logoZoom": {
          "type": "number",
          "description": "Preferred zoom level for the logo."
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/teams/{teamId}",
        "definition": {
          "entityName": "Team",
          "schema": {
            "$ref": "#/backend/entities/Team"
          },
          "description": "Stores team information."
        }
      },
      {
        "path": "/players/{playerId}",
        "definition": {
          "entityName": "Player",
          "schema": {
            "$ref": "#/backend/entities/Player"
          },
          "description": "Stores player information."
        }
      },
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "LeagueSettings",
          "schema": {
            "$ref": "#/backend/entities/LeagueSettings"
          },
          "description": "Global settings for the app."
        }
      }
    ]
  }
}
