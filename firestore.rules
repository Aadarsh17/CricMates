rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Explicit public access for core collections
    match /teams/{teamId} {
      allow read, write: if true;
    }
    
    match /players/{playerId} {
      allow read, write: if true;
    }
    
    match /matches/{matchId} {
      allow read, write: if true;
    }

    // Global fallback to ensure all paths are covered
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
