
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Explicit rules for core collections to ensure "list" and "get" operations are permitted
    
    match /teams/{teamId} {
      allow read, write: if true;
    }
    
    match /players/{playerId} {
      allow read, write: if true;
    }
    
    match /matches/{matchId} {
      allow read, write: if true;
    }

    // Default fallback rule for any other potential collections or sub-collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
