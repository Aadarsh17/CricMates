
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // WARNING: These rules are permissive and allow any user to read and write data.
    // This is for initial development and should be secured before production.
    
    // Default allow all reads and writes to all collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
