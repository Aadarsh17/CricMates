
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Explicit rules for core collections to ensure clean access
    match /teams/{teamId} {
      allow read, write: if true;
    }
    
    match /players/{playerId} {
      allow read, write: if true;
    }
    
    match /matches/{matchId} {
      allow read, write: if true;
    }

    // Fallback for subcollections or other paths
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
